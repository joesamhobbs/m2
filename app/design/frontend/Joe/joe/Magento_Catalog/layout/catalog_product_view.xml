<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<move element="product.info.mailto" destination="product.info.main" after="product.price.tier"/>
		<move element="product.info.review" destination="product.info.main" after="product.info.price"/>
		<referenceBlock name="product.info.sku">
			<arguments>
				<!-- Modified block argument -->
				<argument name="css_class" xsi:type="string">joe-class</argument>
				<!-- Newly added block argument -->
				<argument name="custom_label" xsi:type="string">Custom Block Label</argument>
			</arguments>
		</referenceBlock> 
	</body>
</page>