<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<move element="product.info.mailto" destination="product.info.main" after="product.price.tier"/>
		<move element="product.info.review" destination="product.info.main" after="product.info.price"/>
		<referenceBlock name="product.info.sku">
			<arguments>
				<argument name="css_class" xsi:type="string">joe-sku</argument>
			</arguments>
		</referenceBlock>
		<referenceBlock name="product.info.options.default">
			<block class="Magento\Catalog\Block\Product\View\Options\Type\DefaultType" as="default" template="product/view/options/type/default.phtml">
				<arguments>
					<argument name="css_class" xsi:type="string">joe-stock</argument>
				</arguments>
			</block>
		</referenceBlock>
	</body>
</page>